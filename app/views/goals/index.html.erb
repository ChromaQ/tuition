<h1><%= title('Goals') %></h1>

<table class="table table-hover table-sm">
  <thead>
    <tr>
      <th scope="col"><%= sort_link(@q, :user_displayname, 'Name') %></th>
      <th scope="col"><%= sort_link(@q, :school_name, 'Institution') %></th>
      <th scope="col"><%= sort_link(@q, :credential_name, 'Credential') %> - <%= sort_link(@q, :credential_description, 'Description') %></th>
      <th scope="col">Focus</th>
      <th scope="col">Active</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @goals.each do |goal| %>
      <tr>
        <td><%= link_to goal.user.displayname, goal.user %></td>
        <td><%= goal.school.name %></td>
        <td><%= goal.credential.name %> - <%= goal.credential.description %></td>
        <td><%= goal.focus %></td>
        <td><%= goal.active %></td>
        <td class="btn-group">
          <%= link_to 'Show', goal, class: 'btn-sm btn-primary mr-1' %>
          <%= link_to 'Edit', edit_goal_path(goal), class: 'btn-sm btn-secondary' %>
        </td>
        <!-- hiding this for now - probably won't be deletable anyway <td><%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>
