<%- title('Goal') %>
<dl>
  <dt>Focus:</dt>
  <dd><%= @goal.focus %></dd>
  <dt>Active:</dt>
  <dd><%= @goal.active %></dd>
  <dt>User:</dt>
  <dd><%= @goal.user.displayname %></dd>
  <dt>School:</dt>
  <dd><%= @goal.school.name %></dd>
  <dt>Degree:</dt>
  <dd><%= @goal.credential&.name %> - <%= @goal.credential&.description %></dd>
</dl>
<%= link_to 'Edit', edit_goal_path(@goal) %> |
<%= link_to 'Back', user_path(@goal.user) %>
