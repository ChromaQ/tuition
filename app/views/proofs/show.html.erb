<%- title('Proof') %>
<dl>
  <dt>Receipt:</dt>
  <dd><%= @proof.receipt %></dd>
  <dt>Grade:</dt>
  <dd><%= @proof.grade %></dd>
  <dt>Course:</dt>
  <dd><%= @proof.course.course_title %></dd>
  <% if @proof.document.attached? %>
    <dt>Documentation file name:</dt>
    <dd><%= @proof.document.filename %></dd>
    <dt>File Type:</dt>
    <dd><%= @proof.document.content_type %></dd>
    <% if @proof.document.image? %>
      <dt>Preview:</dt>
      <dd><%= image_tag(@proof.document) %></dd>
      <% end %>
    <dt>Download File:</dt>
    <dd><%= link_to 'Click to Download File', rails_blob_path(@proof.document, disposition: "attachment")  %></dd>
  <% end %>
</dl>


<%= link_to 'Edit', edit_proof_path(@proof), class: 'btn btn-sm btn-secondary' %> |
<%= link_to 'Back', @proof.course, class: 'btn btn-sm btn-primary' %>
