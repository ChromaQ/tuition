<h1><%= title('Reimbursements') %></h1>

<table class="table table-striped table-hover table-sm">
  <thead>
    <tr>
      <th scope="col">Course</th>
      <th scope="col">User</th>
      <th scope="col">Payee</th>
      <th scope="col">Created by</th>
      <th scope="col">Reviewed by</th>
      <th scope="col">Grade met</th>
      <th scope="col">Credits approved</th>
      <th scope="col">Amount</th>
      <th scope="col">Fiscal year</th>
      <th scope="col">Status</th>
      <th colspan="3" scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @reimbursements.each do |reimbursement| %>
      <tr>
        <td><%= reimbursement.course_id %></td>
        <td><%= reimbursement.user_id %></td>
        <td><%= reimbursement.payee %></td>
        <td><%= reimbursement.created_by %></td>
        <td><%= reimbursement.reviewed_by %></td>
        <td><%= reimbursement.grade_met %></td>
        <td><%= reimbursement.credits_approved %></td>
        <td><%= reimbursement.amount %></td>
        <td><%= reimbursement.fiscal_year %></td>
        <td><%= reimbursement.status %></td>
        <td><%= link_to 'Show', reimbursement %></td>
        <td><%= link_to 'Edit', edit_reimbursement_path(reimbursement) %></td>
        <td><%= link_to 'Destroy', reimbursement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Reimbursement', new_reimbursement_path %>
