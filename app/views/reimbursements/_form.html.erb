
<%= simple_form_for(@reimbursement) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.hidden_field :course_id %>
    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :payee %>
    <%= f.hidden_field :created_by %>
    <%= f.hidden_field :reviewed_by, as: :string %>
    <%= f.input :credits_approved %>
    <%= f.input :amount %>
    <%= f.input :fiscal_year, as: :radio_buttons, collection: [[Reimbursement.last_year.year, Reimbursement.last_year ], [Reimbursement.this_year.year, Reimbursement.this_year], [Reimbursement.next_year.year, Reimbursement.next_year ]] %>
    <%= f.input :grade_met %>
    <%= f.hidden_field :status %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
