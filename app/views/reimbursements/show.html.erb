<%- title('Reimbursement') %>
<dl>
  <dt>Course:</dt>
  <dd><%= link_to @reimbursement.course.course_title, @reimbursement.course %> </dd>
  <dt>Reimbursed to:</dt>
  <dd><%= link_to @reimbursement.user&.displayname, @reimbursement.user %></dd>
  <dt>Employee ID:</dt>
  <dd><%= @reimbursement.payee %></dd>
  <dt>Created by:</dt>
  <dd><%= @reimbursement.creator&.displayname %></dd>
  <dt>Reviewed by:</dt>
  <dd><%= @reimbursement.reviewer&.displayname %></dd>
  <dt>Grade met:</dt>
  <dd><%= @reimbursement.grade_met %></dd>
  <dt>Credits approved:</dt>
  <dd><%= @reimbursement.credits_approved %></dd>
  <dt>Amount:</dt>
  <dd><%= @reimbursement.amount %></dd>
  <dt>Fiscal year:</dt>
  <dd><%= @reimbursement.fiscal_year.year %></dd>
  <dt>Status:</dt>
  <dd><%= @reimbursement.status.titleize %></dd>
</dl>

<%= button_to 'HR: Reimbursement Reviewed', review_reimbursement_path(@reimbursement), method: :patch, class: "btn btn-sm btn-outline-primary mr-1 mb-1" %>
<%= link_to 'Edit', edit_reimbursement_path(@reimbursement), class: 'btn btn-sm btn-outline-secondary' %>
<%= link_to 'Back', reimbursements_path, class: 'btn btn-sm btn-outline-primary' %>
