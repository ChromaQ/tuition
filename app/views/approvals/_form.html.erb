<%= form_with(model: @approval, local: true) do |f| %>
  <%= errors_for(@approval) %>


    <div class="form-group">
      <%= f.label :course_id %>
      <%= f.number_field :course_id, class: 'form-control' %>
    </div>


    <div class="form-group">
      <%= f.label :employee_id %>
      <%= f.text_field :employee_id, class: 'form-control' %>
    </div>


    <div class="form-group">
      <%= f.label :role %>
      <%= f.text_field :role, class: 'form-control' %>
    </div>


    <div class="form-group">
      <%= f.label :response %>
      <%= f.text_field :response, class: 'form-control' %>
    </div>


    <div class="form-group">
      <%= f.label 'Reason for Denial' %>
      <%= f.text_area :deny_reason, class: 'form-control' %>
    </div>


    <div class="form-group">
      <%= f.label :course %>
      <%= f.hidden_field :course, class: 'form-control' %>
    </div>

  <div class="form-group">
    <%= f.submit 'Submit Response', class: "btn btn-primary" %>
  </div>
<% end %>
