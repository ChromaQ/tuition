<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <%= link_to 'Home', root_path, class: 'li breadcrumb-item' %>
    <li class="breadcrumb-item active" aria-current="page">Request List</li>
  </ol>
</nav>

<h1 class="text-center mb-3"><%= title('Tuition Reimbursement Requests') %></h1>
<table class="table table-sm table-striped table-hover mx-auto">
  <thead class="thead">
  <tr class="table-secondary">
    <th scope="col" class="col-auto">Employee</th>
    <th scope="col" class="col-auto">Course Title</th>
    <th scope="col" class="col-auto">Short ID</th>
    <th scope="col" class="col-auto">Updated</th>
    <th scope="col" class="col-auto">Begins</th>
    <th scope="col" class="col-auto">Ends</th>
    <th scope="col" class="col-auto">Credits</th>
    <th scope="col" class="col-auto">Cost</th>
    <th colspan="3" scope="col" class="col-auto">Actions</th>
  </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.employee.full_name %></td>
        <td><%= course.course_title %></td>
        <td><%= course.course_short %></td>
        <td><%= time_ago_in_words(course.updated_at) %> ago</td>
        <td><%= Date.strptime(course.start_date.to_s) %></td>
        <td><%= Date.strptime(course.end_date.to_s) %></td>
        <td><%= course.credit_hours %></td>
        <td><%= course.cost %></td>
        <td><%= link_to 'View', course, class:"btn btn-sm btn-outline-primary" %></td>
        <td><%= link_to 'Edit', edit_course_path(course), class:"btn btn-sm btn-outline-secondary" %></td>
        <td><%= link_to 'Delete', course, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-sm btn-outline-warning" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

