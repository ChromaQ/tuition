<%= form_with(model: @course, local: true) do |f| %>
  <%= errors_for(@course) %>

      <div class="form-group">
        <%= f.hidden_field :user_id, class: 'form-control' %>
        <%= f.hidden_field :employee_id, class: 'form-control' %>
        <%= f.hidden_field :status, class: 'form-control' %>
      </div>


    <div class="form-group row">
      <%= f.label :start_date, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-3">
        <%= f.date_select :start_date, order: [:month, :day, :year], min: Date.today, start_year: Date.current.year, end_year: Date.current.year + 1, default: { month: Date.current.month + 1, day: 1}, class: 'form-control'  %>
      </div>
      <div class="col-sm-4 text-left form-text text-muted" id="error_explanation">Start date cannot be before today's date.</div>
    </div>


    <div class="form-group row">
      <%= f.label :end_date, class: 'col-sm-2 col-form-label form-control-label' %>
      <div class="col-sm-6">
        <%= f.date_select :end_date, order: [:month, :day, :year], start_year: Date.current.year, end_year: Date.current.year + 1, default: { month: Date.current.month + 3, day: 1}, class: 'form-control' %>
      </div>
    </div>


    <div class="form-group row">
      <%= f.label :course_title, class: 'col-sm-2 required col-form-label required form-control-label' %>
      <%= f.text_field :course_title, required: true, class: 'col-sm-6 form-control' %>
      <div class="invalid-feedback" id="error_explanation">Must provide course title, such as: Professional Communication for Nurses.</div>

    </div>


    <div class="form-group row">
      <%= f.label :course_short, 'Course ID', class: 'col-sm-2 required col-form-label form-control-label' %>
      <%= f.text_field :course_short, required: true, class: 'col-sm-2 form-control' %>
      <div class="col-sm-8 text-left form-text text-muted" id="error_explanation">Course ID is a 3-4 letter program or subject abbreviation and a 3-digit number, such as  NURS 241 or COMM 304.</div>
      <div class="invalid-feedback" id="error_explanation">Must provide short identifier, normally an abbreviated subject and a 3-digit number, such as  like NURS 241 or COMM 304.</div>
    </div>


    <div class="form-group row">
      <%= f.label :credit_hours, class: 'col-sm-2 required col-form-label form-control-label' %>
      <%= f.number_field :credit_hours, required: true, class: 'col-sm-2 form-control' %>
    </div>


    <div class="form-group row">
      <%= f.label :cost, class: 'col-sm-2 required col-form-label' %>
      <div class="input-group col-sm-6 pl-0">
        <div class="input-group-prepend ">
          <span class="input-group-text">$</span>
          <%= f.number_field :cost, required: true, class: 'form-control' %>
        </div>
      </div>
    </div>

  <div class="form-group">
    <%= f.submit 'Create Request', class: "btn btn-primary" %>
  </div>
<% end %>
